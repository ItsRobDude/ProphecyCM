{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "properties": {
    "base_rep": {
      "type": "integer"
    },
    "id": {
      "pattern": "^(?:class|creature|effect|faction|feat|gear|item|level|loc|npc|option|pc|quest|race|save|skill|start)\\.[a-z0-9]+(?:[-_][a-z0-9]+)*$",
      "type": "string"
    },
    "ideology": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "relationships": {
      "additionalProperties": {
        "type": "integer"
      },
      "type": "object"
    }
  },
  "required": [
    "id",
    "name"
  ],
  "title": "Faction",
  "type": "object"
}
