{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "properties": {
    "id": {
      "pattern": "^(?:class|creature|effect|faction|feat|gear|item|level|loc|npc|option|pc|quest|race|save|skill|start)\\.[a-z0-9]+(?:[-_][a-z0-9]+)*$",
      "type": "string"
    },
    "item_type": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "rarity": {
      "type": "string"
    },
    "tags": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "value": {
      "type": "integer"
    }
  },
  "required": [
    "id",
    "name"
  ],
  "title": "Item",
  "type": "object"
}
