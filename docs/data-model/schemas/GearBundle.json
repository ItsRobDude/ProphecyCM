{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "properties": {
    "description": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "item_ids": {
      "items": {
        "pattern": "^(?:class|creature|effect|faction|feat|gear|item|level|loc|npc|option|pc|quest|race|save|skill|start)\\.[a-z0-9]+(?:[-_][a-z0-9]+)*$",
        "type": "string"
      },
      "type": "array"
    },
    "label": {
      "type": "string"
    }
  },
  "required": [
    "id",
    "label"
  ],
  "title": "GearBundle",
  "type": "object"
}
